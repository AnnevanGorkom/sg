                <overlay startTime="0" text="Floor 2" textColor="black" alpha="0" hoverAlpha="0" x="1700px" y="950px" width="190px" height="100px" /> <!-- Floor number -->
                <overlay leadsTo="gameover" startTime="0" text="7+3" textColor="black" alpha="0" hoverAlpha="0" x="455px" y="220px" width="160px" height="100px" /> <!-- Answer 1 -->
