                  <overlay leadsTo="gameover" startTime="0" text="12+21" shape="circle" textColor="black" x="355px" y="135px" width="160px" height="100px" /> <!-- Answer 1 -->
                  <overlay leadsTo="draak2" startTime="0" text="6x6" shape="circle" textColor="black" x="655px" y="135px" width="160px" height="100px" /> <!-- Answer 2 -->
                  <overlay leadsTo="gameover" startTime="0" text="41-7" shape="circle" textColor="black" x="955px" y="135px" width="160px" height="100px" /> <!-- Answer 3 -->
                  <overlay leadsTo="gameover" startTime="0" text="19+12" shape="circle" textColor="black" x="1255px" y="135px" width="160px" height="100px" /> <!-- Answer 4 -->
              </video>
