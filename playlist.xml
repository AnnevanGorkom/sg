              </image>
            </media>
        </subject>

        <subject id="stairs2" leadsTo="room3">
          <description>Stairs to floor 3</description>
            <media>
              <youtube id="GVgo9clPB90" mute="true" startTime="517" duration="3.5"/>
            </media>
        </subject>

