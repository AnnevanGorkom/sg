<ximpel>
    <playlist>

        <subject id="begin" leadsTo="instructions">
          <description>Start of the game</description>
            <media>
              <image src="media/begin.png" >
                 <overlay startTime="0" leadsTo="instructions" text= "Start" textColor="black" alpha="6" shape="circle" x="1180px" y="640px" width="150px" height="150px" backgroundColor="red" />
              </image>
            </media>
        </subject>

        <subject id="instructions" leadsTo="intro">
          <description>Game-play instructions</description>
            <media>
              <image src="media/instructions.png">
                <overlay startTime="0" text="Welcome to the castle." textColor="black" alpha="0" hoverAlpha="0" x="20px" y="50px" width="1950px" height="100px" backgroundColor="white" />
                <overlay startTime="0" text="To advance to the top floor you have to solve a problem at each floor." textColor="black" alpha="0" hoverAlpha="0" x="20px" y="150px" width="1950px" height="100px" backgroundColor="white" />
                <overlay startTime="0" text="Click the corresponding door to get to the next floor." textColor="black" alpha="0" hoverAlpha="0" x="20px" y="250px" width="1950px" height="100px" backgroundColor="white" />
                <overlay startTime="0" text="When you click the wrong door, you have to start all over again." textColor="black" alpha="0" hoverAlpha="0" x="20px" y="350px" width="1950px" height="100px" backgroundColor="white" />
                <overlay startTime="0" text="At the top of the castle you will fight the dragon." textColor="black" alpha="0" hoverAlpha="0" x="20px" y="450px" width="1950px" height="100px" backgroundColor="white" />
                <overlay startTime="0" text="Here you have limited time to solve the problems, so be quick!" textColor="black" alpha="0" hoverAlpha="0" x="20px" y="550px" width="1950px" height="100px" backgroundColor="white" />
                <overlay startTime="0" text="Good luck defeating the dragon!" textColor="black" alpha="0" hoverAlpha="0" x="20px" y="650px" width="1950px" height="100px" backgroundColor="white" />
                <overlay leadsTo="intro" startTime="0" text="Start!" textColor="black" alpha="0.5" hoverAlpha="1" x="750px" y="850px" width="500px" height="100px" backgroundColor="red" /> <!-- Start button -->
              </image>
            </media>
        </subject>

        <subject id="intro" leadsTo="room1">
          <description>Stairs to floor 1</description>
          <media>
            <youtube id="vePcmdzM5Yk" mute="true" startTime="37" duration="5"/>
          </media>
        </subject>

        <subject id="room1" leadsTo="room2">
          <description>First Floor</description>
            <media>
              <image src="media/room1.png">
                <overlay startTime="0" text="What equation results in the number 5?" textColor="black" fontSize="72px" alpha="1" hoverAlpha="1" x="0px" y="40px" width="1950px" height="100px" backgroundColor="white" /> <!-- Question -->
                <overlay startTime="0" text="Floor 1" textColor="black" alpha="0" hoverAlpha="0" x="1700px" y="950px" width="190px" height="100px" /> <!-- Floor number -->
                <overlay leadsTo="gameover" startTime="0" text="11-7" textColor="black" alpha="0" hoverAlpha="0" x="455px" y="220px" width="160px" height="100px" /> <!-- Answer 1 -->
                <overlay leadsTo="gameover" alpha="0" hoverAlpha="0" startTime="0" x="400px" y="370px" width="260px" height="500px" /> <!-- Door 1 -->
                <overlay leadsTo="gameover" startTime="0" alpha="0" hoverAlpha="0" textColor="black" text="22-11" x="870px" y="220px" width="160px" height="100px" /> <!-- Answer 2 -->
                <overlay leadsTo="gameover" alpha="0" hoverAlpha="0" startTime="0" x="820px" y="370px" width="260px" height="500px" /> <!-- Door 2 -->
                <overlay leadsTo="stairs1" startTime="0" alpha="0" hoverAlpha="0" textColor="black" text="7-2" x="1290px" y="220px" width="160px" height="100px" /><!-- Answer 3 -->
                <overlay leadsTo="stairs1" alpha="0" hoverAlpha="0" startTime="0" x="1245x" y="370px" width="260px" height="500px" /> <!-- Door 3 -->
              </image>
            </media>
        </subject>

        <subject id="stairs1" leadsTo="room2">
          <description>Stairs to floor 2</description>
            <media>
              <youtube id="GVgo9clPB90" mute="true" startTime="517" duration="3.5"/>
            </media>
        </subject>

