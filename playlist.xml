        </subject>

        <subject id="stairs4" leadsTo="eindbaas">
          <description>Stairs to eindbaas</description>
            <media>
              <youtube id="GVgo9clPB90" mute="true" startTime="517" duration="3.5"/>
            </media>
        </subject>

        <subject id="eindbaas" leadsTo="draak1">
          <description>Eindbaas instructions</description>
            <media>
              <image src="media/instructions.png">
                <overlay startTime="0" text="Congratulations, you made it to final room!" textColor="black" alpha="0" hoverAlpha="0" x="20px" y="250px" width="1950px" height="100px" />
                <overlay startTime="0" text="Be quick with your answer" textColor="black" alpha="0" hoverAlpha="0" x="20px" y="450px" width="1950px" height="100px" />
                <overlay startTime="0" text="and watch out for the dragon's fireball." textColor="black" alpha="0" hoverAlpha="0" x="20px" y="650px" width="1950px" height="100px" />
