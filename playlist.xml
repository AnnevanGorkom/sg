            <media>
              <image src="media/room4.png" backgroundColor="#000000">
                <overlay startTime="0" text="Fill in the dots: 21:..=7" textColor="black" fontSize="72px" alpha="1" hoverAlpha="1" x="0px" y="40px" width="1950px" height="100px" backgroundColor="white" /> <!-- Question -->
                <overlay startTime="0" text="Floor 4" textColor="black" alpha="0" hoverAlpha="0" x="1700px" y="950px" width="190px" height="100px" /> <!-- Floor number -->
                <overlay leadsTo="stairs4" startTime="0" text="3" textColor="black" alpha="0" hoverAlpha="0" x="455px" y="220px" width="160px" height="100px" /> <!-- Answer 1 -->
